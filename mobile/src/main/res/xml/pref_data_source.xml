<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="@string/nightwatch_data_source"
            android:key="dataSource">
        <CheckBoxPreference
            android:key="nightscout_poll"
            android:title="@string/read_from_nightscout"
            android:summary="@string/read_from_nightscout_summary"
            android:defaultValue="false" />
        <EditTextPreference
            android:dependency="nightscout_poll"
            android:key="dex_collection_method"
            android:title="@string/nightscout_url"
            android:summary="@string/nightscout_url_summary"
            android:defaultValue="https://{yoursite}.azurewebsites.net"/>

        <CheckBoxPreference
            android:key="share_poll"
            android:title="@string/read_from_share"
            android:summary="@string/read_from_share_summary"
            android:defaultValue="false" />
        <EditTextPreference
            android:dependency="share_poll"
            android:key="dexcom_account_name"
            android:title="@string/dexcom_login"
            android:summary="@string/dexcom_login_summary"
            android:defaultValue=""/>
        <EditTextPreference
            android:dependency="share_poll"
            android:key="dexcom_account_password"
            android:title="@string/dexcom_password"
            android:inputType="textPassword"
            android:summary="@string/dexcom_password_summary"
            android:defaultValue=""/>
    </PreferenceCategory>

</PreferenceScreen>
